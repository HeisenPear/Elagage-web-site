---
/**
 * Section Services avec grid 3 colonnes et animations
 * Cards avec hover lift effect + animations au scroll
 */
import { siteConfig } from '@/data/siteConfig';

// Map des icônes SVG
const iconMap = {
  tree: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/></svg>`,
  axe: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/></svg>`,
  tool: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>`,
  hedge: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`,
  apple: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 00-2-2m0 0h2m6 0v-6a2 2 0 00-2-2h-2a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2z"/></svg>`,
  calendar: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>`,
};

const services = siteConfig.services.filter(s => s.featured);
---

<section id="services" class="section-spacing bg-neutral-cream relative overflow-hidden">
  <!-- Background decorative element -->
  <div class="absolute top-20 right-0 w-96 h-96 bg-accent/5 rounded-full blur-3xl -z-0" aria-hidden="true"></div>

  <div class="container-custom relative z-10">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16 animate-on-scroll">
      <span class="inline-block px-4 py-2 bg-accent/10 text-accent font-semibold rounded-full text-sm uppercase tracking-wider mb-4">
        Nos services
      </span>
      <h2 class="text-display-2 font-display font-bold text-primary mb-6">
        Prestations d'élagage professionnelles
      </h2>
      <p class="text-lg text-neutral-gray">
        De l'élagage d'arbres en hauteur à l'entretien de haies, nous intervenons pour tous vos besoins d'entretien paysager.
      </p>
    </div>

    <!-- Services grid avec stagger animation -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 stagger-container">
      {services.map((service) => (
          <article class="card group cursor-pointer relative" data-service={service.id}>
            <!-- Icon avec animation -->
            <div class="w-16 h-16 bg-accent/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-accent group-hover:scale-110 transition-all duration-300 text-accent group-hover:text-white">
              <Fragment set:html={iconMap[service.icon as keyof typeof iconMap]} />
            </div>

            <!-- Content -->
            <h3 class="text-2xl font-display font-bold text-primary mb-4 group-hover:text-accent transition-colors duration-300">
              {service.name}
            </h3>
            <p class="text-neutral-gray leading-relaxed mb-6">
              {service.shortDescription}
            </p>

            <!-- CTA Link -->
            <a
              href={`/services/${service.slug}`}
              class="inline-flex items-center gap-2 text-accent font-semibold group-hover:gap-3 transition-all duration-300"
              aria-label={`En savoir plus sur ${service.name}`}
            >
              <span>En savoir plus</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </a>

            <!-- Hover border effect -->
            <div class="absolute inset-0 rounded-xl border-2 border-transparent group-hover:border-accent/20 transition-colors duration-300 pointer-events-none"></div>
          </article>
        ))}
    </div>

    <!-- CTA Voir tous les services -->
    <div class="text-center mt-16 animate-on-scroll">
      <a href="/services" class="btn-primary inline-flex">
        <span>Voir tous nos services</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>
