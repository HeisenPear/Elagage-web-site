---
/**
 * Section Équipe & Matériel Professionnel
 * - 4 cards avec photos
 * - Élagueurs, nacelle, équipement, rogneuse
 * - SEO optimisé
 */
const equipements = [
  {
    image: '/images/equipe/elagueur-action.webp',
    alt: 'Élagueur professionnel certifié en action avec équipement de sécurité Tours',
    titre: 'Élagueurs Certifiés',
    description: 'Formation continue & 10 ans d\'expérience',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/></svg>`
  },
  {
    image: '/images/equipe/camion-nacelle.webp',
    alt: 'Camion nacelle élévateur professionnel pour élagage en hauteur Tours',
    titre: 'Nacelle Professionnelle',
    description: 'Accès arbres jusqu\'à 25 mètres',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/></svg>`
  },
  {
    image: '/images/equipe/materiel-securite.webp',
    alt: 'Équipement de sécurité professionnel EPI pour élagage Tours',
    titre: 'Équipement de Sécurité',
    description: 'Normes CE & EPI complets',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>`
  },
  {
    image: '/images/equipe/rogneuse-dessouchage.webp',
    alt: 'Rogneuse professionnelle pour dessouchage de souches Tours',
    titre: 'Rogneuse de Souches',
    description: 'Dessouchage rapide & efficace',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>`
  }
];
---

<section class="section-spacing bg-gradient-to-br from-neutral-cream to-white">
  <div class="container-custom">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-16 animate-on-scroll">
      <span class="inline-block px-4 py-2 bg-primary/10 text-primary font-semibold rounded-full text-sm uppercase tracking-wider mb-4">
        Notre expertise
      </span>
      <h2 class="text-display-2 font-display font-bold text-primary mb-6">
        Équipe & Matériel Professionnel
      </h2>
      <p class="text-lg text-neutral-gray leading-relaxed">
        Des élagueurs certifiés et un équipement de pointe pour votre sécurité et des interventions de qualité
      </p>
    </div>

    <!-- Grid 4 colonnes responsive -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {equipements.map((equipement, index) => (
        <article class="group rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 bg-white hover:-translate-y-2 animate-on-scroll">
          {/* Image */}
          <div class="relative h-64 overflow-hidden bg-gray-100">
            <img
              src={equipement.image}
              alt={equipement.alt}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              loading="lazy"
              width="600"
              height="600"
            />

            {/* Badge icône en haut à gauche */}
            <div class="absolute top-4 left-4 w-12 h-12 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center text-primary shadow-lg">
              <Fragment set:html={equipement.icon} />
            </div>
          </div>

          {/* Contenu */}
          <div class="p-6 bg-gradient-to-br from-white to-neutral-cream/30">
            <h3 class="text-xl font-display font-bold text-primary mb-2 group-hover:text-accent transition-colors">
              {equipement.titre}
            </h3>
            <p class="text-sm text-neutral-gray leading-relaxed">
              {equipement.description}
            </p>
          </div>
        </article>
      ))}
    </div>

    <!-- CTA Section -->
    <div class="mt-16 text-center animate-on-scroll">
      <div class="bg-gradient-to-br from-primary to-primary-900 rounded-2xl p-8 md:p-12 text-white shadow-2xl">
        <h3 class="text-2xl md:text-3xl font-display font-bold mb-4">
          Une Question sur Notre Matériel ou Nos Méthodes ?
        </h3>
        <p class="text-white/90 mb-6 max-w-2xl mx-auto">
          N'hésitez pas à nous contacter pour en savoir plus sur nos équipements et notre expertise
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:0252566856" class="inline-flex items-center justify-center gap-3 px-8 py-4 bg-white text-primary font-bold rounded-xl hover:bg-neutral-cream transition-all duration-300 hover:scale-105">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span>02 52 56 68 56</span>
          </a>
          <a href="/contact" class="inline-flex items-center justify-center gap-3 px-8 py-4 border-2 border-white text-white font-bold rounded-xl hover:bg-white hover:text-primary transition-all duration-300 hover:scale-105">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <span>Demander un devis</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- SEO Hidden content -->
<div class="sr-only">
  <h3>Équipement professionnel d'élagage Tours</h3>
  <ul>
    <li>Élagueurs certifiés avec 10 ans d'expérience en Indre-et-Loire</li>
    <li>Camion nacelle élévatrice pour arbres jusqu'à 25 mètres de hauteur</li>
    <li>Équipement de protection individuelle (EPI) aux normes CE</li>
    <li>Rogneuse professionnelle pour dessouchage rapide et efficace</li>
  </ul>
</div>
