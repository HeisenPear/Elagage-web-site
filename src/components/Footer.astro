---
/**
 * Footer complet avec liens, réseaux sociaux, mentions légales
 */
import { siteConfig, getPhoneLink, getEmailLink } from '@/data/siteConfig';

const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { name: 'Élagage', href: '/services/elagage-arbres' },
    { name: 'Abattage d\'arbres', href: '/services/abattage-arbres' },
    { name: 'Dessouchage', href: '/services/dessouchage-arbres' },
    { name: 'Taille de haies', href: '/services/taille-haies' },
    { name: 'Entretien des gazons', href: '/services/entretien-gazons' },
    { name: 'Étêtage d\'arbre', href: '/services/etetage-arbre' },
  ],
  company: [
    { name: 'Accueil', href: '/' },
    { name: 'Contact', href: '/contact' },
  ],
  legal: [
    { name: 'Mentions légales', href: '/mentions-legales' },
  ],
};
---

<footer class="bg-primary text-white" role="contentinfo">
  <!-- Main footer content -->
  <div class="container-custom py-16 md:py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Colonne 1 : À propos -->
      <div class="space-y-6">
        <h3 class="text-2xl font-display font-bold">{siteConfig.business.name}</h3>
        <p class="text-white/70 leading-relaxed">
          {siteConfig.business.tagline}. Expert en élagage et entretien d'arbres depuis {siteConfig.stats.yearsExperience} ans.
        </p>

        <!-- Certifications badges -->
        <div class="space-y-2">
          {siteConfig.business.certifications.map((cert) => (
            <div class="flex items-center gap-2 text-sm text-white/60">
              <svg class="w-4 h-4 text-accent flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span>{cert}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Colonne 2 : Services -->
      <div class="space-y-6">
        <h4 class="text-lg font-display font-bold uppercase tracking-wider">Services</h4>
        <ul class="space-y-3">
          {footerLinks.services.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-white/70 hover:text-accent transition-colors duration-300 inline-flex items-center group"
              >
                <span class="transform transition-transform duration-300 group-hover:translate-x-1">
                  {link.name}
                </span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Colonne 3 : Entreprise -->
      <div class="space-y-6">
        <h4 class="text-lg font-display font-bold uppercase tracking-wider">Entreprise</h4>
        <ul class="space-y-3">
          {footerLinks.company.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-white/70 hover:text-accent transition-colors duration-300 inline-flex items-center group"
              >
                <span class="transform transition-transform duration-300 group-hover:translate-x-1">
                  {link.name}
                </span>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Colonne 4 : Contact -->
      <div class="space-y-6">
        <h4 class="text-lg font-display font-bold uppercase tracking-wider">Contact</h4>
        <address class="not-italic space-y-4">
          <!-- Téléphone principal -->
          <a
            href={getPhoneLink()}
            class="flex items-start gap-3 text-white/70 hover:text-accent transition-colors duration-300 group"
          >
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <div>
              <p>{siteConfig.business.phoneDisplay}</p>
              <p class="text-sm">{siteConfig.business.phoneSecondaryDisplay}</p>
            </div>
          </a>

          <!-- Email -->
          <a
            href={getEmailLink()}
            class="flex items-start gap-3 text-white/70 hover:text-accent transition-colors duration-300 group"
          >
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <span class="break-all">{siteConfig.business.email}</span>
          </a>

          <!-- Adresse -->
          <div class="flex items-start gap-3 text-white/70">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <div>
              <p>{siteConfig.business.address.street}</p>
              <p>{siteConfig.business.address.postalCode} {siteConfig.business.address.city}</p>
            </div>
          </div>
        </address>

        <!-- Réseaux sociaux -->
        {Object.values(siteConfig.business.social).some(Boolean) && (
          <div class="flex gap-4 pt-4">
            {siteConfig.business.social.facebook && (
              <a
                href={siteConfig.business.social.facebook}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 flex items-center justify-center rounded-full bg-white/10 hover:bg-accent transition-all duration-300 hover:scale-110"
                aria-label="Facebook"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            )}
            {siteConfig.business.social.instagram && (
              <a
                href={siteConfig.business.social.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 flex items-center justify-center rounded-full bg-white/10 hover:bg-accent transition-all duration-300 hover:scale-110"
                aria-label="Instagram"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
            )}
          </div>
        )}
      </div>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="border-t border-white/10">
    <div class="container-custom py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-white/60">
        <!-- Copyright -->
        <div class="text-center md:text-left">
          <p>© {currentYear} {siteConfig.business.name}. Tous droits réservés.</p>
          <p class="text-xs mt-1">SIRET : {siteConfig.business.siret}</p>
        </div>

        <!-- Legal links -->
        <div class="flex flex-wrap justify-center gap-6">
          {footerLinks.legal.map((link) => (
            <a
              href={link.href}
              class="hover:text-accent transition-colors duration-300"
            >
              {link.name}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>
