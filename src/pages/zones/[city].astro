---
/**
 * Page dynamique pour chaque zone d'intervention
 * Génère automatiquement une page SEO pour chaque ville
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import ContactForm from '@/components/react/ContactForm';
import { siteConfig } from '@/data/siteConfig';

export async function getStaticPaths() {
  return siteConfig.serviceArea.cities.map((city) => ({
    params: {
      city: city.toLowerCase().replace(/[^a-z0-9]+/g, '-'),
    },
    props: {
      cityName: city,
    },
  }));
}

const { city } = Astro.params;
const { cityName } = Astro.props;

// SEO optimisé pour la ville
const pageTitle = `Élagage ${cityName} | ${siteConfig.business.name} | Devis Gratuit`;
const pageDescription = `Élagueur professionnel à ${cityName} (37). Élagage, abattage, taille de haies. Réduction fiscale 2500€. Devis gratuit ${siteConfig.business.phoneDisplay}. Intervention rapide.`;
const keywords = [
  `élagage ${cityName}`,
  `élagueur ${cityName}`,
  `abattage arbre ${cityName}`,
  `taille haie ${cityName}`,
  `élagueur professionnel ${cityName}`,
  'réduction fiscale élagage',
];
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  keywords={keywords}
>
  <!-- Hero Section ville -->
  <section class="relative pt-32 pb-20 bg-gradient-to-br from-primary to-primary-900 text-white">
    <div class="container-custom">
      <!-- Breadcrumb -->
      <nav class="mb-8 text-sm" aria-label="Fil d'Ariane">
        <ol class="flex items-center gap-2 text-white/70">
          <li><a href="/" class="hover:text-white transition-colors">Accueil</a></li>
          <li>/</li>
          <li><span>Zones d'intervention</span></li>
          <li>/</li>
          <li class="text-white font-semibold">{cityName}</li>
        </ol>
      </nav>

      <div class="max-w-4xl">
        <h1 class="text-display-2 font-display font-bold mb-6">
          Élagueur professionnel à {cityName}
        </h1>
        <p class="text-xl text-white/90 mb-8">
          {siteConfig.business.name} intervient à {cityName} et ses environs pour tous vos travaux d'élagage, abattage et entretien d'espaces verts.
          Devis gratuit sous 24h.
        </p>

        <div class="flex flex-wrap gap-4">
          <a
            href="#contact"
            class="btn-primary inline-flex items-center gap-3"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <span>Devis gratuit</span>
          </a>

          <a
            href={`tel:${siteConfig.business.phone}`}
            class="inline-flex items-center gap-3 px-8 py-4 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-primary transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span>{siteConfig.business.phoneDisplay}</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Services à [Ville] -->
  <section class="section-spacing bg-white">
    <div class="container-custom">
      <h2 class="text-display-3 font-display font-bold text-primary mb-12 text-center">
        Nos services d'élagage à {cityName}
      </h2>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {siteConfig.services.filter(s => s.featured).map((service) => (
          <div class="card group hover:border-accent/40">
            <div class="w-14 h-14 bg-accent/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-accent group-hover:scale-110 transition-all duration-300">
              <svg class="w-8 h-8 text-accent group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <h3 class="text-2xl font-display font-bold text-primary mb-4">{service.name}</h3>
            <p class="text-neutral-gray leading-relaxed mb-6">{service.shortDescription}</p>
            <a href={`/services/${service.slug}`} class="text-accent font-semibold hover:underline">
              En savoir plus →
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Section Pourquoi nous choisir à [Ville] -->
  <section class="section-spacing bg-gradient-to-br from-neutral-cream to-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-display-3 font-display font-bold text-primary mb-12 text-center">
          Pourquoi choisir {siteConfig.business.name} à {cityName} ?
        </h2>

        <div class="grid md:grid-cols-2 gap-6">
          {[
            {
              title: 'Intervention rapide',
              description: `Nous intervenons rapidement à ${cityName} et alentours, généralement sous 48h pour un devis et intervention planifiée selon vos disponibilités.`,
              icon: 'clock',
            },
            {
              title: 'Réduction fiscale 2 500€',
              description: 'Bénéficiez de 50% de crédit d\'impôt sur vos travaux d\'élagage et entretien de jardin (limite 5 000€ de dépenses/an).',
              icon: 'money',
            },
            {
              title: 'Assurance RC Pro 8M€',
              description: 'Tous nos chantiers sont couverts par notre assurance responsabilité civile professionnelle de 8 millions d\'euros.',
              icon: 'shield',
            },
            {
              title: 'Paiement facilité',
              description: 'Nous proposons des facilités de paiement en plusieurs fois pour les chantiers importants.',
              icon: 'card',
            },
          ].map((point) => (
            <div class="bg-white rounded-xl p-8 shadow-soft hover:shadow-lift transition-all duration-300">
              <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-6">
                <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-primary mb-4">{point.title}</h3>
              <p class="text-neutral-gray leading-relaxed">{point.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Section Contact -->
  <section id="contact" class="section-spacing bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-display-3 font-display font-bold text-primary mb-4">
            Demandez votre devis gratuit à {cityName}
          </h2>
          <p class="text-xl text-neutral-gray">
            Réponse sous 24h • Déplacement gratuit • Devis sans engagement
          </p>
        </div>

        <div class="bg-white rounded-2xl shadow-lift p-8 md:p-12">
          <ContactForm client:visible />
        </div>
      </div>
    </div>
  </section>

  <!-- Section Zones proches -->
  <section class="section-spacing bg-gradient-to-br from-neutral-cream to-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-display font-bold text-primary mb-8 text-center">
          Nous intervenons également près de {cityName}
        </h2>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
          {siteConfig.serviceArea.cities
            .filter(c => c !== cityName)
            .slice(0, 12)
            .map((nearbyCity) => (
              <a
                href={`/zones/${nearbyCity.toLowerCase().replace(/[^a-z0-9]+/g, '-')}`}
                class="px-4 py-3 bg-white rounded-lg text-center text-primary hover:bg-accent hover:text-white transition-all duration-300 shadow-soft hover:shadow-lift"
              >
                {nearbyCity}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
