---
/**
 * Page Contact avec formulaire et informations
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import ContactForm from '@/components/react/ContactForm';
import { siteConfig, getPhoneLink, getEmailLink } from '@/data/siteConfig';
import { getBreadcrumbSchema } from '@/utils/schemas';

const breadcrumbs = [
  { name: 'Accueil', url: '/' },
  { name: 'Contact', url: '/contact' },
];

const schema = getBreadcrumbSchema(breadcrumbs);
---

<BaseLayout
  title={`Contact - ${siteConfig.business.name} | Devis gratuit`}
  description={`Contactez ${siteConfig.business.name} pour un devis gratuit. Téléphone, email, formulaire en ligne. Réponse rapide sous 24h.`}
  schema={schema}
>
  <div class="pt-32 pb-20 bg-neutral-cream">
    <div class="container-custom">
      <!-- Header -->
      <div class="max-w-3xl mx-auto text-center mb-16 animate-on-scroll">
        <h1 class="text-display-1 font-display font-bold text-primary mb-6">
          Contactez-nous
        </h1>
        <p class="text-xl text-neutral-gray">
          Devis gratuit sous 24h • Réponse rapide • Intervention {siteConfig.serviceArea.department}
        </p>
      </div>

      <div class="grid lg:grid-cols-5 gap-12">
        <!-- Formulaire (col 3) -->
        <div class="lg:col-span-3 animate-on-scroll">
          <div class="bg-white rounded-2xl p-8 md:p-10 shadow-soft">
            <h2 class="text-2xl font-display font-bold text-primary mb-6">
              Demande de devis
            </h2>

            <ContactForm client:load />
          </div>
        </div>

        <!-- Informations (col 2) -->
        <div class="lg:col-span-2 space-y-8 animate-on-scroll">
          <!-- Coordonnées -->
          <div class="bg-primary text-white rounded-2xl p-8">
            <h3 class="text-2xl font-display font-bold mb-8">
              Nos coordonnées
            </h3>

            <div class="space-y-6">
              <!-- Téléphone -->
              <a href={getPhoneLink()} class="flex items-start gap-4 group">
                <div class="w-12 h-12 bg-accent/20 rounded-lg flex items-center justify-center flex-shrink-0 group-hover:bg-accent transition-colors duration-300">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <div class="font-semibold mb-1">Téléphone</div>
                  <div class="text-white/80">{siteConfig.business.phoneDisplay}</div>
                </div>
              </a>

              <!-- Email -->
              <a href={getEmailLink()} class="flex items-start gap-4 group">
                <div class="w-12 h-12 bg-accent/20 rounded-lg flex items-center justify-center flex-shrink-0 group-hover:bg-accent transition-colors duration-300">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <div class="font-semibold mb-1">Email</div>
                  <div class="text-white/80 break-all">{siteConfig.business.email}</div>
                </div>
              </a>

              <!-- Adresse -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-accent/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <div class="font-semibold mb-1">Adresse</div>
                  <div class="text-white/80">
                    <p>{siteConfig.business.address.street}</p>
                    <p>{siteConfig.business.address.postalCode} {siteConfig.business.address.city}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Horaires -->
          <div class="bg-white rounded-2xl p-8 shadow-soft">
            <h3 class="text-xl font-display font-bold text-primary mb-6">
              Horaires d'ouverture
            </h3>
            <div class="space-y-3 text-neutral-gray">
              <div class="flex justify-between">
                <span>Lundi - Vendredi</span>
                <span class="font-semibold text-neutral-black">{siteConfig.business.openingHours.weekdays}</span>
              </div>
              <div class="flex justify-between">
                <span>Samedi</span>
                <span class="font-semibold text-neutral-black">{siteConfig.business.openingHours.saturday}</span>
              </div>
              <div class="flex justify-between">
                <span>Dimanche</span>
                <span class="font-semibold text-neutral-black">{siteConfig.business.openingHours.sunday}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
