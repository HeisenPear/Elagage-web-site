---
/**
 * Page 404 personnalisée avec SEO optimisé
 * - Navigation claire vers les pages principales
 * - Liens internes pour réduire taux de rebond
 * - Design cohérent avec le reste du site
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import { siteConfig } from '@/data/siteConfig';

const title = 'Page introuvable (404) | ' + siteConfig.business.name;
const description = 'La page que vous recherchez est introuvable. Découvrez nos services d\'élagage et d\'abattage d\'arbres à Tours et en Indre-et-Loire.';
---

<BaseLayout
  title={title}
  description={description}
  noindex={true}
>
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-neutral-cream to-white px-4">
    <div class="max-w-3xl mx-auto text-center py-20">

      <!-- Numéro 404 stylisé -->
      <div class="mb-8">
        <h1 class="text-[150px] md:text-[200px] font-display font-black text-primary/10 leading-none select-none">
          404
        </h1>
        <div class="-mt-20 md:-mt-32">
          <svg class="w-24 h-24 md:w-32 md:h-32 mx-auto text-accent animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
      </div>

      <!-- Message -->
      <div class="space-y-4 mb-12">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-primary">
          Oups ! Cette page n'existe pas
        </h2>
        <p class="text-lg text-neutral-gray max-w-2xl mx-auto">
          La page que vous cherchez a peut-être été déplacée, supprimée, ou l'URL est incorrecte.
        </p>
      </div>

      <!-- Actions principales -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-16">
        <a href="/" class="btn-primary inline-flex text-base">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          <span>Retour à l'accueil</span>
        </a>

        <a href="/contact" class="inline-flex items-center gap-2 px-6 py-3 border-2 border-primary text-primary font-bold text-base rounded-xl hover:bg-primary hover:text-white transition-all hover:scale-105">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <span>Nous contacter</span>
        </a>
      </div>

      <!-- Liens rapides -->
      <div class="bg-white rounded-2xl shadow-soft p-8 md:p-10">
        <h3 class="text-xl font-bold text-primary mb-6">Peut-être cherchiez-vous :</h3>

        <div class="grid sm:grid-cols-2 gap-4 text-left">
          <!-- Services principaux -->
          <a href="/#services" class="group flex items-start gap-3 p-4 rounded-xl hover:bg-accent/5 transition-colors">
            <svg class="w-6 h-6 text-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            <div>
              <div class="font-bold text-primary group-hover:text-accent transition-colors">Nos services</div>
              <div class="text-sm text-neutral-gray">Élagage, abattage, taille haies...</div>
            </div>
          </a>

          <!-- Zones d'intervention -->
          <a href="/zones" class="group flex items-start gap-3 p-4 rounded-xl hover:bg-accent/5 transition-colors">
            <svg class="w-6 h-6 text-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <div>
              <div class="font-bold text-primary group-hover:text-accent transition-colors">Zones d'intervention</div>
              <div class="text-sm text-neutral-gray">{siteConfig.serviceArea.cities.length} villes en Indre-et-Loire</div>
            </div>
          </a>


          <!-- Devis gratuit -->
          <a href="/contact" class="group flex items-start gap-3 p-4 rounded-xl hover:bg-accent/5 transition-colors">
            <svg class="w-6 h-6 text-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <div>
              <div class="font-bold text-primary group-hover:text-accent transition-colors">Devis gratuit</div>
              <div class="text-sm text-neutral-gray">Réponse sous 24h</div>
            </div>
          </a>
        </div>
      </div>

      <!-- Contact direct -->
      <div class="mt-12 p-6 bg-gradient-to-br from-primary/5 to-accent/5 rounded-xl border border-accent/20">
        <p class="text-neutral-gray mb-3">Besoin d'aide ? Contactez-nous directement :</p>
        <a href={`tel:${siteConfig.business.phone}`} class="inline-flex items-center gap-2 text-xl font-bold text-accent hover:text-primary transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          {siteConfig.business.phoneDisplay}
        </a>
      </div>

    </div>
  </div>
</BaseLayout>

<style>
  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  .animate-bounce {
    animation: bounce 2s ease-in-out infinite;
  }
</style>
