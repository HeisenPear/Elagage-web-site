---
/**
 * Page Galerie (placeholder)
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import { siteConfig } from '@/data/siteConfig';
---

<BaseLayout
  title={`Galerie - ${siteConfig.business.name}`}
  description="Découvrez nos réalisations d'élagage, abattage et entretien d'arbres en photos."
>
  <div class="pt-32 pb-20 bg-neutral-cream">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center mb-16 animate-on-scroll">
        <h1 class="text-display-1 font-display font-bold text-primary mb-6">
          Notre galerie
        </h1>
        <p class="text-xl text-neutral-gray">
          Découvrez nos réalisations d'élagage et d'abattage d'arbres
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 stagger-container">
        {[1,2,3,4,5,6,7,8,9].map((i) => (
          <div class="aspect-square bg-gradient-to-br from-primary-100 to-accent/20 rounded-2xl flex items-center justify-center hover:scale-105 transition-transform duration-300 cursor-pointer">
            <svg class="w-16 h-16 text-primary/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
        ))}
      </div>

      <div class="text-center mt-12">
        <p class="text-neutral-gray">
          Photos à venir. Contactez-nous pour voir nos réalisations !
        </p>
      </div>
    </div>
  </div>
</BaseLayout>
