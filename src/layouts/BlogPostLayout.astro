---
/**
 * Layout pour les articles de blog
 * Optimis√© SEO avec schema Article, breadcrumb, etc.
 */
import BaseLayout from './BaseLayout.astro';
import { siteConfig } from '@/data/siteConfig';
import type { CollectionEntry } from 'astro:content';

interface Props {
  entry: CollectionEntry<'blog'>;
}

const { entry } = Astro.props;
const { title, description, publishDate, author, image, category, tags, seoKeywords } = entry.data;

// Formater la date en fran√ßais
const formattedDate = new Intl.DateTimeFormat('fr-FR', {
  day: 'numeric',
  month: 'long',
  year: 'numeric',
}).format(publishDate);

// Schema.org Article
const articleSchema = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: title,
  description: description,
  image: image?.src ? `${Astro.site}${image.src}` : undefined,
  datePublished: publishDate.toISOString(),
  dateModified: publishDate.toISOString(),
  author: {
    '@type': 'Organization',
    name: author || siteConfig.business.name,
  },
  publisher: {
    '@type': 'LocalBusiness',
    name: siteConfig.business.name,
    logo: {
      '@type': 'ImageObject',
      url: `${Astro.site}/images/logo.svg`,
    },
  },
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': Astro.url.href,
  },
  keywords: tags.join(', '),
};

// Breadcrumb schema
const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Accueil',
      item: `${Astro.site}`,
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Blog',
      item: `${Astro.site}blog`,
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: title,
      item: Astro.url.href,
    },
  ],
};

const schemas = [articleSchema, breadcrumbSchema];

// Cat√©gories en fran√ßais
const categoryLabels: Record<string, string> = {
  elagage: '√âlagage',
  abattage: 'Abattage',
  conseils: 'Conseils',
  reglementation: 'R√©glementation',
  saisonnier: 'Saisonnier',
};
---

<BaseLayout
  title={`${title} | Blog √âlagage Abattage 37`}
  description={description}
  keywords={seoKeywords}
  ogImage={image?.src}
  schema={schemas}
>
  <article class="bg-white">
    <!-- Hero de l'article -->
    <div class="bg-gradient-to-br from-green-800 to-green-900 text-white py-16 md:py-24">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Breadcrumb -->
        <nav class="mb-8 text-sm" aria-label="Fil d'Ariane">
          <ol class="flex flex-wrap items-center gap-2 text-green-200">
            <li><a href="/" class="hover:text-white transition">Accueil</a></li>
            <li aria-hidden="true">/</li>
            <li><a href="/blog" class="hover:text-white transition">Blog</a></li>
            <li aria-hidden="true">/</li>
            <li class="text-white" aria-current="page">{title}</li>
          </ol>
        </nav>

        <!-- Cat√©gorie & Date -->
        <div class="flex flex-wrap items-center gap-4 mb-6">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-700/50 text-green-100">
            {categoryLabels[category]}
          </span>
          <time datetime={publishDate.toISOString()} class="text-sm text-green-200">
            {formattedDate}
          </time>
        </div>

        <!-- Titre -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          {title}
        </h1>

        <!-- Description -->
        <p class="text-xl md:text-2xl text-green-100 leading-relaxed">
          {description}
        </p>

        <!-- Tags -->
        {tags && tags.length > 0 && (
          <div class="mt-8 flex flex-wrap gap-2">
            {tags.map((tag) => (
              <span class="px-3 py-1 bg-green-800/50 rounded-full text-xs text-green-100">
                #{tag}
              </span>
            ))}
          </div>
        )}
      </div>
    </div>

    <!-- Image hero (si pr√©sente) -->
    {image && (
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 -mt-12 mb-12">
        <img
          src={image.src}
          alt={image.alt}
          class="w-full rounded-xl shadow-2xl"
          loading="eager"
          width={1200}
          height={630}
        />
      </div>
    )}

    <!-- Contenu de l'article -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="prose prose-lg prose-green max-w-none">
        <slot />
      </div>

      <!-- CTA en fin d'article -->
      <div class="mt-16 p-8 bg-gradient-to-br from-green-50 to-green-100 rounded-2xl border border-green-200">
        <div class="text-center">
          <h3 class="text-2xl font-bold text-green-900 mb-4">
            Besoin d'un √©lagueur professionnel&nbsp;?
          </h3>
          <p class="text-lg text-green-700 mb-6">
            Notre √©quipe intervient rapidement √† Tours et dans toute l'Indre-et-Loire.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="tel:+33631464350"
              class="inline-flex items-center justify-center px-8 py-4 bg-green-700 text-white font-semibold rounded-full hover:bg-green-800 transition shadow-lg hover:shadow-xl"
            >
              üìû 06 31 46 43 50
            </a>
            <a
              href="/contact"
              class="inline-flex items-center justify-center px-8 py-4 bg-white text-green-700 font-semibold rounded-full hover:bg-green-50 transition border-2 border-green-700"
            >
              Demander un devis gratuit
            </a>
          </div>
        </div>
      </div>

      <!-- Partage social -->
      <div class="mt-12 pt-8 border-t border-gray-200">
        <p class="text-sm text-gray-600 mb-4">Partager cet article :</p>
        <div class="flex gap-3">
          <a
            href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url.href}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center w-10 h-10 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition"
            aria-label="Partager sur Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.77 7.46H14.5v-1.9c0-.9.6-1.1 1-1.1h3V.5h-4.33C10.24.5 9.5 3.44 9.5 5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4z"/></svg>
          </a>
          <a
            href={`https://twitter.com/intent/tweet?url=${Astro.url.href}&text=${encodeURIComponent(title)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center w-10 h-10 bg-black text-white rounded-full hover:bg-gray-800 transition"
            aria-label="Partager sur X (Twitter)"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
          <a
            href={`https://www.linkedin.com/shareArticle?mini=true&url=${Astro.url.href}&title=${encodeURIComponent(title)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center w-10 h-10 bg-blue-700 text-white rounded-full hover:bg-blue-800 transition"
            aria-label="Partager sur LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  /* Style Prose pour le contenu Markdown */
  .prose {
    color: #1f2937;
  }

  .prose h2 {
    @apply text-3xl font-bold text-green-900 mt-12 mb-6;
  }

  .prose h3 {
    @apply text-2xl font-semibold text-green-800 mt-8 mb-4;
  }

  .prose h4 {
    @apply text-xl font-semibold text-green-700 mt-6 mb-3;
  }

  .prose p {
    @apply text-gray-700 leading-relaxed mb-6;
  }

  .prose a {
    @apply text-green-700 underline hover:text-green-800 transition;
  }

  .prose strong {
    @apply text-green-900 font-semibold;
  }

  .prose ul,
  .prose ol {
    @apply my-6 space-y-2;
  }

  .prose li {
    @apply text-gray-700;
  }

  .prose blockquote {
    @apply border-l-4 border-green-500 pl-6 italic text-gray-600 my-8;
  }

  .prose code {
    @apply bg-green-50 text-green-800 px-2 py-1 rounded text-sm;
  }

  .prose pre {
    @apply bg-gray-900 text-gray-100 p-6 rounded-xl overflow-x-auto my-8;
  }

  .prose img {
    @apply rounded-xl shadow-lg my-8;
  }

  .prose table {
    @apply w-full my-8 border-collapse;
  }

  .prose th {
    @apply bg-green-700 text-white p-3 text-left font-semibold;
  }

  .prose td {
    @apply border border-gray-300 p-3;
  }
</style>
